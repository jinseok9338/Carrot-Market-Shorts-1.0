{
  "type": "postgres",
  "host": "localhost",
  "port": 5432,
  "username": "user",
  "database": "mydb",
  "extra": {
    "ssl": {
      "rejectUnauthorized": false
    }
  },
  "ssl": true,
  "synchronize": true,
  "logging": false,
  "entities": ["src/**/*.entity{.ts,.js}"],
  "migrations": ["migration/**/*.ts"],
  "subscribers": ["subscriber/**/*.ts"],
  "cli": {
    "migrationsDir": "migration",
    "subscribersDir": "subscriber"
  }
}
